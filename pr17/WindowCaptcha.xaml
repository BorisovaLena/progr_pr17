<Window x:Class="pr17.WindowCaptcha"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pr17"
        mc:Ignorable="d"
        Title="WindowCaptcha" Height="200" Width="350">
    <Grid>
        <StackPanel>
            <Canvas Name="can" Width="300" Height="100" Background="AliceBlue"></Canvas>
            <StackPanel>
                <GroupBox Header="Введите текст с картинки">
                    <TextBox Name="tbText"  TextChanged="tbText_TextChanged"/>
                </GroupBox>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
